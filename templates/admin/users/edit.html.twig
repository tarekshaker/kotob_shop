{% extends 'admin/layout.html.twig' %}

{% block content %}
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"><a href="/admin" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a
                        href="/admin/users" class="current">Users</a></div>
            <h1>Users</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title"><span class="icon"><i class="icon-th"></i></span>
                            <h5>Edit User</h5>
                        </div>
                        <div class="widget-content">
                            {{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}
                            <div class="control-group">
                                {{ form_label(form.username,  null, {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.username) }}
                                <div class="controls">
                                    {{ form_widget(form.username, { 'attr' : { 'class': 'span11' } }) }}
                                </div>

                                {{ form_help(form.username) }}
                            </div>
                            <div class="control-group">
                                {{ form_label(form.password,  null, {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.password) }}
                                <div class="controls">
                                    {{ form_widget(form.password, { 'attr' : { 'class': 'span11' } }) }}
                                </div>

                                {{ form_help(form.password) }}
                            </div>
                            <div class="control-group">
                                {{ form_label(form.email,  null, {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.email) }}
                                <div class="controls">
                                    {{ form_widget(form.email, { 'attr' : { 'class': 'span11' } }) }}
                                </div>

                                {{ form_help(form.email) }}
                            </div>

                            <div class="form-actions">
                                {{ form_widget(form.edit) }}
                                <input type="button" class="btn btn-danger" value="Back" onclick="history.back(-1)" />
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
